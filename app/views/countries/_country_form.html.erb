<% form_for(@country) do |f| %>
  <%= f.error_messages %>
  <br />
  <label>Country:<br /><span style="font-size: 10px; color: #666666;">New country name</label>
		<%=f.text_field :country %><br /><br />
		
  <label>Currency:<br /><span style="font-size: 10px; color: #666666;">Local currency</label>
		<%=f.text_field :currency %><br /><br />
  <p>
		<%= submit_tag "#{action} Country" %>
  </p>
<% end %>
